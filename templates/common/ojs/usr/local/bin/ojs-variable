#!/bin/sh

var=${1}
val=${2}
tmpfile="/tmp/config.inc.php"

echo "[OJS Variables] Set variable value in config.inc.php"
echo "     Variable:    [$var]"
echo "     New value:   [$val]"
echo "     config file: [$OJS_CONF]"

cp $OJS_CONF $tmpfile
sed -i -e "s/^$var =.*/$var = $val/" $tmpfile
cat $tmpfile > $OJS_CONF

echo "[OJS Variable] Variable set."
